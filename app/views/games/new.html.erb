<h1>New Game</h1>
<p><%= @letters%></p>

<form action="/score" method="post" data-turbo="false">
  <div class="form-group">
    <label for="exampleInputPassword1">What is the longest word you can type ?</label>
    <input type="text" id="answer" name="word" class="form-control" placeholder="Type here">
  </div>

  <button type="submit" class="btn btn-primary">Play</button>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>

